.keyboard-form
  z-index: 9
  position: absolute;
  bottom: 0
  left: 50%
  transform: translate(-50%, 0);
  opacity: 0.1;
  &:focus
    z-index: 999

.about
  z-index: 3
  position: absolute
  top: 0
  left: 0
  max-width: 40%
  color: white
  background: rgba(0, 0, 0, 0.5)
  padding: 0.5em
  font-family: Sansita Swashed
  box-shadow: 1px 1px 15px black;

  p
    color #eee
  a
    display: block
    color: white
    text-decoration: none
    margin: 0.6em

.presets
  z-index: 2
  position: absolute
  top: 10px
  right: 10px
  a
    display: block
    img
      border-radius: 10px
      width: 120px
      height: 85px
      box-shadow: 0 0 5px black
